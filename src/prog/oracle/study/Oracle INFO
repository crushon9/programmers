-- 오라클 버전 확인
SELECT *
  FROM PRODUCT_COMPONENT_VERSION;

SELECT *
  FROM V$VERSION;

-- 한글 2BYTE OR 3BYTE 확인
 SELECT *
  FROM NLS_DATABASE_PARAMETERS
 WHERE PARAMETER LIKE '%CHARACTERSET%';

-- 테이블 코멘트 확인
SELECT *
FROM ALL_COL_COMMENTS A, ALL_TAB_COLUMNS B
WHERE A.TABLE_NAME = B.TABLE_NAME
AND A.COLUMN_NAME = B.COLUMN_NAME
AND A.TABLE_NAME = 'TR_MSCMNC_QOTAT_USER';

-- 테이블 제약조건 확인
SELECT A.TABLE_NAME
     , A.CONSTRAINT_NAME
     , B.COLUMN_NAME
     , B.POSITION
  FROM ALL_CONSTRAINTS  A
     , ALL_CONS_COLUMNS B
 WHERE A.TABLE_NAME      = 'TR_MSCMNC_QOTAT_USER'
   AND A.CONSTRAINT_TYPE = 'P' -- PK
   AND A.OWNER           = B.OWNER
   AND A.CONSTRAINT_NAME = B.CONSTRAINT_NAME
 ORDER BY B.POSITION;
